<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_loginteacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="login"
        android:text="@string/btn_loginteacher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_rounded"
        android:paddingTop="@dimen/space_24"
        android:paddingBottom="@dimen/space_24"
        android:paddingRight="@dimen/space_16"
        android:paddingLeft="@dimen/space_16"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_loginstudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:onClick="login"
        android:text="@string/btn_loginstudent"
        app:layout_constraintEnd_toEndOf="@+id/btn_loginteacher"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_loginteacher"
        app:layout_constraintTop_toBottomOf="@+id/btn_loginteacher"
        android:background="@drawable/btn_rounded"
        android:paddingTop="@dimen/space_24"
        android:paddingBottom="@dimen/space_24"
        android:paddingRight="@dimen/space_16"
        android:paddingLeft="@dimen/space_16"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/createAccBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:onClick="createAccount"
        android:text="@string/btn_newaccount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_loginstudent"
        app:layout_constraintStart_toStartOf="@+id/btn_loginstudent"
        android:background="@drawable/btn_rounded"
        android:paddingTop="@dimen/space_24"
        android:paddingBottom="@dimen/space_24"
        android:paddingRight="@dimen/space_16"
        android:paddingLeft="@dimen/space_16"
        android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>